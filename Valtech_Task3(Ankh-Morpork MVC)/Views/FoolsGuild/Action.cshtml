@using Valtech_Task3_Ankh_Morpork_MVC_.Services
@model Valtech_Task3_Ankh_Morpork_MVC_.Models.Fools
@{
    Layout = "~/Views/Shared/_GameProcessLayout.cshtml";
}
<div class="gameplay-info-position">
    <div style="height: 80%">
        <h2>Your friend @Model.Name is grateful to you and paid @CurrentPlayerProcessor.PlayerBalanceTextVariant(@Model.TakeMoney) according to his financial capabilities !</h2>
    </div>
    <div style="height: 20%">
        <div class="authorization-variants">
            @Html.ActionLink("Next step", "Index", "GamePlay", null, new { @class = "link-style" })
        </div>
    </div>
</div>